                <TextView
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{Weather.weeklyHigh[0]}" />

                <TextView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
