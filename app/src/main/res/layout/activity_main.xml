                    android:text="@{Weather.weeklyLow[1]}" />

                <TextView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{Weather.weeklyLow[2]}" />

                <TextView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
